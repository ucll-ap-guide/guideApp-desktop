{
  "name": "guide-app-desktop",
  "author": "Alexandre Vryghem & Mathias Van den Cruijce",
  "description": "D3 based floorplan builder",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "start:electron": "ng build --base-href ./ && electron .",
    "postinstall": "electron-builder install-app-deps",
    "build-electron": "electron-builder --windows",
    "release": "electron-builder --windows --publish always"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.5",
    "@angular/common": "~13.2.5",
    "@angular/compiler": "~13.2.5",
    "@angular/core": "~13.2.5",
    "@angular/forms": "~13.2.5",
    "@angular/platform-browser": "~13.2.5",
    "@angular/platform-browser-dynamic": "~13.2.5",
    "@angular/router": "~13.2.5",
    "ajv-keywords": "^5.1.0",
    "ngx-toastr": "^14.2.2",
    "rxjs": "~7.5.4",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.5",
    "@angular/cli": "~13.2.5",
    "@angular/compiler-cli": "~13.2.5",
    "@types/node": "^17.0.21",
    "angular-cli-ghpages": "^1.0.0",
    "autoprefixer": "^10.4.2",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "postcss": "^8.4.8",
    "tailwindcss": "^3.0.23",
    "typescript": "~4.5.5"
  },
  "build": {
    "appId": "be.ucll.guido",
    "productName": "GuidO",
    "dmg": {
      "icon": false
    },
    "files": [
      "main.js",
      "dist{,/**/*}"
    ]
  }
}
